<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="1"
            android:padding="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:hint="Settings"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textStyle="bold"
                android:letterSpacing="0.05"
                android:textSize="45sp"
                android:gravity="center"
                android:padding="18dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:hint="Enter New Password"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="20sp"
                android:background="@drawable/rounded_corners"
                android:padding="18dp"
                android:inputType="textPassword"
                android:fontFamily="@font/font_gothammedium"
                android:id="@+id/newPassword_input"/>


            <Button
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Update Password"
                android:textColor="#237841"
                android:backgroundTint="@color/white"
                android:padding="10dp"
                android:layout_marginTop="32dp"
                android:textSize="20sp"
                android:fontFamily="@font/font_gothammedium"
                android:id="@+id/updatePassword_btn"
                />
            <Button
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Log Out"
                android:textColor="#237841"
                android:backgroundTint="@color/white"
                android:padding="10dp"
                android:layout_marginTop="32dp"
                android:textSize="20sp"
                android:fontFamily="@font/font_gothammedium"
                android:id="@+id/logOut_btn"
                />
            <Button
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Clear Account Data"
                android:textColor="#237841"
                android:backgroundTint="@color/white"
                android:padding="10dp"
                android:layout_marginTop="32dp"
                android:textSize="20sp"
                android:fontFamily="@font/font_gothammedium"
                android:id="@+id/clearAccountData_btn"
                />

            <Button
                android:id="@+id/deleteAccount_btn"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:backgroundTint="@color/white"
                android:padding="10dp"
                android:text="Delete Account"
                android:textColor="#237841"
                android:fontFamily="@font/font_gothammedium"
                android:textSize="20sp" />

        </LinearLayout>
        <include
            layout="@layout/layout_navbar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.075"
            />
    </LinearLayout>
    <include
        layout="@layout/layout_loading"
        />
</RelativeLayout>
