<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="Settings"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textStyle="bold"
            android:letterSpacing="0.05"
            android:textSize="45sp"
            android:gravity="center"
            android:padding="18dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:hint="Enter Old Password"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="20sp"
            android:background="@drawable/rounded_corners"
            android:padding="18dp"
            android:inputType="textPassword"
            android:id="@+id/oldPassword_input"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:hint="Enter New Password"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="20sp"
            android:background="@drawable/rounded_corners"
            android:padding="18dp"
            android:inputType="textPassword"
            android:id="@+id/newPassword_input"/>


        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Update Password"
            android:textColor="#237841"
            android:backgroundTint="@color/white"
            android:padding="10dp"
            android:layout_marginTop="32dp"
            android:textSize="20sp"
            android:id="@+id/updatePassword_btn"
            />
        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Log Out"
            android:textColor="#237841"
            android:backgroundTint="@color/white"
            android:padding="10dp"
            android:layout_marginTop="32dp"
            android:textSize="20sp"
            android:id="@+id/logOut_btn"
            />
        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Clear Account Data"
            android:textColor="#237841"
            android:backgroundTint="@color/white"
            android:padding="10dp"
            android:layout_marginTop="32dp"
            android:textSize="20sp"
            android:id="@+id/clearAccountData_btn"
            />

        <Button
            android:id="@+id/deleteAccount_btn"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/white"
            android:padding="10dp"
            android:text="Delete Account"
            android:textColor="#237841"
            android:textSize="20sp" />
    <include
        layout="@layout/layout_navbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.075"
        />

    </LinearLayout>
</RelativeLayout>