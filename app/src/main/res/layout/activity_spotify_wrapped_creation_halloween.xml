<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:hint="Generate a New Holiday Themed Spotify Wrap!"
        android:textAlignment="center"
        android:letterSpacing="0.05"
        android:padding="12dp"
        android:fontFamily="@font/font_gothambold"
        android:textColorHint="@color/strong_orange"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Until November, you will have the choice to generate a Halloween themed Spotify Wrap, that will generate some spooky track recommendations for you!"
        android:textAlignment="center"
        android:letterSpacing="0.05"
        android:padding="5dp"
        android:textColorHint="@color/orange"
        android:fontFamily="@font/font_gothammedium"
        android:textSize="16dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="20dp"
        android:hint="Title"
        android:fontFamily="@font/font_gothammedium"
        android:textColor="@color/strong_orange"
        android:textColorHint="@color/strong_orange"
        android:textSize="20sp"
        android:background="@drawable/rounded_corners"
        android:padding="18dp"
        android:inputType="text"
        android:id="@+id/spotify_wrapped_title"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select a Time Frame to Generate by:"
        android:fontFamily="@font/font_gothammedium"
        android:textSize="18dp"
        android:textColorHint="@color/strong_orange"
        android:paddingBottom="8dp" />

    <AutoCompleteTextView
        android:id="@+id/time_range"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:hint="6 Months"
        android:fontFamily="@font/font_gothammedium"
        android:drawableEnd="@drawable/ic_arrow_drop_down"
        android:inputType="none"
        android:padding="10dp"
        android:textColor="@color/strong_orange"
        android:textColorHint="@color/strong_orange"
        android:background="@drawable/rounded_corners" />



    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Create Spotify Wrapped"
        android:textColor="#000000"
        android:backgroundTint="@color/strong_orange"
        android:padding="10dp"
        android:layout_marginTop="3dp"
        android:textSize="18dp"
        android:fontFamily="@font/font_gothammedium"
        android:id="@+id/create_spotify_wrapped_button"
        />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textColor="#000000"
        android:backgroundTint="@color/red"
        android:padding="10dp"
        android:layout_marginTop="3dp"
        android:textSize="18dp"
        android:fontFamily="@font/font_gothammedium"
        android:id="@+id/cancel_button"
        />

</LinearLayout>