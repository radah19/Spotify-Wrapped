<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".spotifywrap.pagerfragments.PagerTopTrackAndArtistFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:paddingBottom="100dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_gothambold"
            android:textSize="40dp"
            android:textColor="@color/banana"
            android:textAlignment="center"
            android:layout_marginBottom="30dp"
            android:text="Welcome to your Spotify Wrap"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fromToDates"
            android:fontFamily="@font/font_gothambold"
            android:textSize="26dp"
            android:textColor="@color/banana"
            android:textAlignment="center"
            android:layout_marginBottom="30dp"
            android:text="From January 1, 2022 to January 1, 2023"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_gothammedium"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:text="Swipe Right to Begin Viewing your Spotify Wrap"
            />

    </LinearLayout>

</LinearLayout>